

<div class="container">
	<div class="row">
		<div class="col s12">
			<h5>{{link-to "< Articles" "articles"}}</h5>
		</div>
	</div>
	<div class="row">
		<div class="col s12">
				<h3 class="green-text text-darken-4">{{article.cardTitle}}</h3>
				<h5 class="green-text">{{article.cardContent}}</h5>
		</div>
	</div>
	<div class="row">
		<div class="col s12 text-center">
			<img class="responsive-img" src="{{article.image}}" alt="image">
		</div>
		<div class="col s12 font-large margin-top">
			<b>By {{article.author}}</b>
		</div>
	</div>
	<div class="row">
		<div class="col s12 article-content margin-article">
				{{partial article.bodyPartial}}
		</div>
	</div>

</div>
