<div class="container">
	<div class="row">
		<div class="col s12">
			<h2 class="green-text text-darken-4">Investors &amp; Mentors</h2>
		</div>
		<div class="col s12 green-text">
			Learn from these great investors and mentors at Venture Hacked. RSVP for our {{#link-to "events"}}next event{{/link-to}}.
		</div>
	</div>
	<div class="row">
		{{#each content.current as |investor|}}
			{{investor-profile-card investor=investor}}
		{{/each}}
	</div>
	<div class="row">
		<h4 class="green-text text-darken-4">Previously Featured</h4>
		{{#each content.past as |investor|}}
			{{investor-profile-card investor=investor}}
		{{/each}}
	</div>
</div>